<h2> <%= @cocktail.name %> </h2>

<% @cocktail.doses.each do |dose| %>
  <p> <%= dose.description %> - <%= dose.ingredient.name%> <%= link_to "Remove",
                    dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></p>

<% end %>

<%= link_to "Back to Cocktail Menu 🥃", cocktails_path  %>

<%= link_to "Add more ingredients 🍹", new_cocktail_dose_path(@cocktail) %>
